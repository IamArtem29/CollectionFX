<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<VBox minWidth="200" alignment="CENTER" spacing="5.0" xmlns:fx="http://javafx.com/fxml"
>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="Name"/>
    <TextField fx:id="diskName"/>
    <Label text="Description"/>
    <TextField fx:id="diskDescription"/>
    <Label text="Тип"/>
    <ToggleButton text="DVD" fx:id="diskTypeDVD"/>
    <ToggleButton text="CD-R" fx:id="diskTypeCDR"/>
    <ToggleButton text="mini-disk" fx:id="diskTypeMINI_DISK"/>
    <Label text="Update Categories (to split add ',')"/>
    <TextField fx:id="diskCategories"/>
    <Button text="Update" fx:id="updateButton"/>
    <Button text="Back" fx:id="backButton"/>
</VBox>