<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<VBox minWidth="200" alignment="CENTER" spacing="5.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.diskcollectionfx.Menu">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Button text="Show all disks" fx:id="allItemsButton" onAction="#onAllItemsClick"/>
    <Button text="Add new disk" fx:id="addNewItemButton" onAction="#onAddNewItemClick"/>
    <Button text="Close Application" fx:id="exitButton" onAction="#onExitClick"/>
</VBox>